    <CheckBoxPreference
       android:key="checkboxPref"
       android:title="Widget 1"
       android:summary="description"
       android:defaultValue="true"/>
    <CheckBoxPreference
       android:key="checkboxPref"
       android:title="Widget 2"
       android:summary="description"
       android:defaultValue="true"/>
    <CheckBoxPreference
       android:key="checkboxPref"
       android:title="Widget 3"
